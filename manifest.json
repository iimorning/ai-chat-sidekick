{
  "manifest_version": 3,
  "name": "AI Chat Sidekick",
  "version": "1.0",
  "description": "使用 Gemini 分析和优化您在主流 AI 聊天中的提示词。",
  "permissions": [
    "sidePanel",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://chat.openai.com/*",
    "*://claude.ai/*",
    "*://copilot.microsoft.com/*",
    "*://gemini.google.com/*",
    "*://chat.deepseek.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://chat.openai.com/*",
        "*://claude.ai/*",
        "*://copilot.microsoft.com/*",
        "*://gemini.google.com/*",
        "*://chat.deepseek.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "打开 AI 对话伙伴"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}